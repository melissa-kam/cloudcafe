# ======================================================
# reference.config
# ------------------------------------------------------
# This configuration is specifically a reference
# implementation for a configuration file.
# You must create a proper configuration file and supply
# the correct values for your Environment(s)
#
# For multiple environments it is suggested that you
# generate specific configurations and name the files
# <ENVIRONMENT>.<FORMAT>.config
# ======================================================
[marshalling]
serialize_format=json
deserialize_format=json

[cloudkeep]
base_url=<base_url>
api_version=v1
tenant_id=test_tenant

[cloudkeep-secrets]
name=aes_key
algorithm=aes
bit_length=256
cypher_type=CDC
plain_text=fake_data
mime_type=text/plain

[cloudkeep-orders]
name=secretname
algorithm=aes
bit_length=256
cypher_type=cbc
mime_type=application/octet-stream

[cloudkeep-client-lib]
authentication_endpoint=auth_endpoint
username=user
key=key
token=bypass

[cloudkeep-keystone]
authentication_endpoint=<auth_url>
username=demo
password=password
auth_tenant=demo
endpoint=<base_url>

